{
    "env": {
        "node": true
    },
    "extends": [
        "google",
        "standard-with-typescript",
        "plugin:prettier/recommended",
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended"
    ],
    "plugins": [
        "import",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./package.json"
    },
    "rules": {
        "prettier/prettier": "error",
        "semi": ["error", "never"]
    }
}